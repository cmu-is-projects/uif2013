<%= simple_nested_form_for @student, :html => { :class => 'form-horizontal', :multipart => true } do |f| %>

<%= f.input :first_name %>
<!--<%= f.input :last_name %> -->
<p>Last Name <input type="text"id="last_name" name="Last Name" value="" > </p>

<%= f.input :is_visitor %>

<div id="visitor_households">
    <p>Visitor Information</p>
    <%= simple_fields_for :household do |h| %>
   <!--  <div class="field">
        <%= h.label :family_name %>
        <%= h.text_field :name %>
    </div> -->
    <p> Family Name <input type="text" id="name" name="Family Name" value=""> </p>
</br>
    <div class="field">   
        <%= h.label :street %>
        <%= h.text_field :street %>
    </div>
</br>
    <div class="field">   
        <%= h.label :street2 %>
        <%= h.text_field :street2, :required => false %>
    </div>
</br>
    <div class="field">   
        <%= h.label :city %>
        <%= h.text_field :city, :required => false %>
    </div>
</br>
    <div class="field">   
        <%= h.label :zip %>
        <%= h.text_field :zip %>
    </div>
</div>

<script>
$("#last_name").keyup(function(){
    $("#name").val(this.value);
});
</script>

<%= f.input :barcode_number %>

<%= f.input :household_id, :collection => get_households, :prompt => 'Choose Household' %>
</br>
<%= f.input :is_male, :label => "Gender", :as => :radio_buttons, :collection => [["Male ",true], ["Female ",false]], :item_wrapper_class => 'inline' %> 
<% end %>

<%= f.input :grade, :collection => Student::GRADE_LIST, :prompt => 'Choose Grade', :required => true %>
<%= f.input :date_of_birth, :order => [:month, :day, :year], :start_year => Date.today.year, :end_year => Date.today.year - 20 %>
<%= f.input :cell_phone %>
<%= f.input :can_text %>
<%= f.input :email %>
<%= f.input :status, :collection => Student::STATUS_LIST, :default => 'Choose Status' %>
<%= f.input :avatar, :label => 'Your photo please' %>

<div id="enrollment_nested_form">
    <%= f.fields_for :enrollments do |enrollment_form| %>
      <%= render 'enrollment_fields', f: enrollment_form %>
    <% end %>
  <p><%= link_to_add_fields raw("<i class='icon-plus'></i> Add an enrollment"), f, :enrollments %></p>
</div>

<div class="form-actions">
    <%= f.button :submit, :class => 'btn-success' %>
    <% if @data.blank? %> 
    <%= link_to t('.cancel', :default => t("helpers.links.cancel")),
    students_path, :class => 'btn' %>
    <%else%>
    <%= link_to t('.cancel', :default => t("helpers.links.cancel")),
    home_path, :class => 'btn' %>
    <%end%>
</div>
<% end %>


