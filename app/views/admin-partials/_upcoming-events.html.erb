<% if @events.current.count() == 0 %>
  <h2> There Are No Events Today</h2>
<% else %>
  <% @events.current.each do |event| %>
    <%= link_to event.program.name, event_path(event) %>&nbsp;&nbsp;&nbsp;&nbsp; <%= event.date.strftime("%B %d, %Y") %>&nbsp;&nbsp;&nbsp;&nbsp;<%= event.start_time.strftime("%B %d, %Y") %>-<%= event.end_time.strftime("%B %d, %Y") %>&nbsp;&nbsp;&nbsp;&nbsp;<%= link_to "(Scan)", {:controller => "home", :action => "checkin", :event_id => event.id}%><br>
  <% end %> 
<% end %>