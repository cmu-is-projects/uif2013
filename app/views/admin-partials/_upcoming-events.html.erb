<% if @events.current.count() == 0 %>
  <h2> There Are No Events Today</h2>
<% else %>
  <table>
    <% @events.current.each do |event| %>
      <tr>
        <td><%= link_to event.program.name, event_path(event) %></td>
        <td><%= event.date.strftime("%B %d, %Y") %></td>
        <td><%= link_to "(Student)", {:controller => "home", :action => "checkin", :event_id => event.id}%></td>
        <td><%= link_to "(Volunteers)", {:controller => "home", :action => "volunteer_checkin", :event_id => event.id}%></td>
      </tr>
    <% end %> 
  </table>
<% end %>