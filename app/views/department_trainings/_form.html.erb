<%= simple_form_for(@department_training) do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
    <%= f.input :department_id, :collection => Department.all %>
    <%= f.input :training_id, :collection => Training.all %>
  </div>

  <div class="form-actions">
    <%= f.button :submit %>
  </div>
<% end %>
