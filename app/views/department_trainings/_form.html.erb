<%= simple_form_for(@department_training) do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
    <%= f.input :department_id, :collection => Department.alphabetical, :prompt => 'Choose Department' %>
    <%= f.input :training_id, :collection => Training.alphabetical, :prompt => 'Choose Training' %>
  </div>

  <div class="form-actions">
    <%= f.button :submit %>
  </div>
<% end %>
