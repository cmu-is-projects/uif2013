<!DOCTYPE html>
<html>
<head>
    <title>Uif2013</title>
    <%= include_gon %>
    <%= stylesheet_link_tag "modern" %>
    <%= stylesheet_link_tag "application", "http://fonts.googleapis.com/css?family=Oswald", :media => "all" %>
    <%= javascript_include_tag "application" %>
    <%= javascript_include_tag "bootstrap" %>
    <%= yield :javascripts %>
    <%= csrf_meta_tags %>
</head>
<body>

  <%= render :partial => "partials/header" %>

  <div class="container-fluid">
    <% flash.each do |name, msg| %>
			<div class="alert alert-<%= name == :notice ? "success" : "error" %>">
				<a class="close" data-dismiss="alert">&times;</a>
				<%= msg %>
			</div>
    <% end %>
      <!--p class="notice"><%= notice %></p-->
      <!--p class="alert"><%= alert %></p-->
      <%= yield %>     
  </div>

  <%= render :partial => "partials/footer"%>

  <script type="text/javascript">
    var uvOptions = {};
    (function() {
      var uv = document.createElement('script'); uv.type = 'text/javascript'; uv.async = true;
      uv.src = ('https:' == document.location.protocol ? 'https://' : 'http://') + 'widget.uservoice.com/c6E3v63psr1NrbIQb9D9g.js';
      var s = document.getElementsByTagName('script')[0]; s.parentNode.insertBefore(uv, s);
    })();
  </script>

</body>
</html>
