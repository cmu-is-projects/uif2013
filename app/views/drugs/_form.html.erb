<%= simple_form_for @drug, :html => { :class => 'form-horizontal' } do |f| %>
  
  <%= f.input :name, :placeholder => 'Name' %>
  <%= f.input :description, :placeholder => 'Enter description', :input_html => { :rows => 4 } %>
  <%= f.input :active %>
  <%= f.input :otc %>

  <div class="form-actions">
    <%= f.button :submit, :class => 'btn-success' %>
    <% if @data.blank? %> 
      <%= link_to t('.cancel', :default => t("helpers.links.cancel")),
                  drugs_path, :class => 'btn' %>
    <%else%>
      <%= link_to t('.cancel', :default => t("helpers.links.cancel")),
                  home_path, :class => 'btn' %>
    <%end%>
  </div>
<% end %>

