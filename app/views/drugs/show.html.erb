<%- model_class = Drug -%>
<h1><%=t '.title', :default => model_class.model_name.human %></h1>

<dl class="dl-horizontal">
  <dt><strong><%= model_class.human_attribute_name(:name) %>:</strong></dt>
  <dd><%= @drug.name %></dd>
  <dt><strong><%= model_class.human_attribute_name(:description) %>:</strong></dt>
  <dd><%= @drug.has_description %> </dd>
  <dt><strong><%= model_class.human_attribute_name(:active) %>:</strong></dt>
  <dd><%= @drug.active %></dd>
  <dt><strong><%= model_class.human_attribute_name(:otc) %>:</strong></dt>
  <dd><%= @drug.otc %></dd>
</dl>

<div class="form-actions">
  <%= link_to raw("<i class='icon-backward'></i> Back to drugs"),
              drugs_path, :class => 'btn'  %>
  <%= link_to raw("<i class='icon-edit'></i> Edit this drug"),
              edit_drug_path(@drug), :class => 'btn' %>
  <%= link_to raw("<i class='icon-remove'></i> Destroy this drug"),
              drug_path(@drug),
              :method => 'delete',
              :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
              :class => 'btn btn-danger' %>
</div>

<%= render :partial => "partials/add_notes_to_page", :locals => {:obj => @drug} %>
