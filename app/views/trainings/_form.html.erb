<%= simple_form_for(@training) do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
    <%= f.input :name %>
    <%= f.input :description %>
    <%= f.input :level, :as => :radio_buttons, :collection => [["Beginner ","Beginner "], ["Intermediate ","Intermediate "], ["Advanced ","Advanced "]], :item_wrapper_class => 'inline' %> 
    <%= f.input :next_offered, :order => [:month, :day, :year], :start_year => Date.today.year+2, :end_year => Date.today.year %>
  </div>

  <div class="form-actions">
    <%= f.button :submit %>
  </div>
<% end %>