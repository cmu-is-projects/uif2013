<div class="adjust_page">
  <div class="page-header checkin">
  <h2><%= @event.date.strftime("%b %d, %Y") %></h2>
  <%- if @event.program.scan_by_absence %>
    <h2>Absence Scan for Following Sections:</h2>
  <%- else %>
    <h3>Attendance Scan for Following Sections:</h3>
  <%- end %>
  </div>
  <ul class="scan_sections">
  <% @event.sections.each do |event| %>
    <li><%= event.name %></li>
  <% end %>
  </ul>
  <br/>
  
  <ul id="tabs" class="nav nav-tabs" data-tabs="tabs">
      <li class="active"><a href="#red" data-toggle="tab">Student</a></li>
      <li><a href="#orange" data-toggle="tab">Volunteers</a></li>
  </ul>
  <div id="my-tab-content" class="tab-content">
      <div class="tab-pane active" id="red">
          <h5>Scanning Students...</h5>
          <div id="attendance_barcodes">
                <input id ="Input" type="text"> </input>
                <h3 style="color: black;"><span id="student_checked"></span></h3>
          </div>
          <br/>
          <div id="container">
            <div class="scanning attend"><h2>Attendees</h2><p/><div id="attend"><%= render :partial => "attendees" %></div></div>
            <div class="scanning absent"><h2>Absentees</h2><p/><div id="absent"><%= render :partial => "absentees" %></div></div>
          </div>
      </div>
      <div class="tab-pane" id="orange">
          <h5>Scanning Volunteers...</h5>
          <div id="v_attendance_barcodes">
                <input id ="Input" type="text"> </input>
                <h3 style="color: black;"><span id="volunteers_checked"></span></h3>
          </div>
          <br/>
          <div id="container">
            <div class="scanning attend"><h2>Volunteers Checked In</h2><p/><div id="volunteer_attend"><%= render :partial => "volunteer_attendees" %></div></div>
            <div class="scanning absent"><h2>Volunteer Absentees</h2><p/><div id="volunteer_absent"><%= render :partial => "volunteer_absentees" %></div></div>
          </div>
      </div>

  </div>

</div>
