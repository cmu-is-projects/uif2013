<%= simple_form_for @condition, :html => { :class => 'form-horizontal' } do |f| %>
  
  <%= f.input :name, :placeholder => 'Name' %>
  <%= f.input :warning_text, :placeholder => 'Enter warning messages', :input_html => { :rows => 10 } %>
  <%= f.input :active %>
  <div class="form-actions">
    <%= f.button :submit, :class => 'btn-success' %>
    <% if @data.blank? %> 
      <%= link_to t('.cancel', :default => t("helpers.links.cancel")),
                  conditions_path, :class => 'btn' %>
    <%else%>
      <%= link_to t('.cancel', :default => t("helpers.links.cancel")),
                  home_path, :class => 'btn' %>
    <%end%>
  </div>
<% end %>

