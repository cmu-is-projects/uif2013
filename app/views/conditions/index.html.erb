<h1>All Conditions</h1>

<table class="table table-striped">
  <thead>
    <tr>
      <th>Name</th>
      <th>&nbsp;</th>
    </tr>
  </thead>
  
  <tbody>
    <% @conditions.each do |condition| %>
      <tr>
          <td><%= link_to condition.name, condition_path(condition) %></td>
          <td>
            <%= link_to raw("<i class='icon-edit'></i> Edit"),
                        edit_condition_path(condition), :class => 'btn btn-mini' %>
          </td>
      </tr>
    <% end %>
  </tbody>
</table>


