<%= simple_form_for(@check) do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
    <%= f.input :name %>
    <%= f.input :duration, :collection => [*1..24], :prompt => 'Number of Months'  %>
    <%= f.input :cost %>

  </div>

  <div class="form-actions">
    <%= f.button :submit %>
  </div>
<% end %>