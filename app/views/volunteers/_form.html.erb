<%= simple_nested_form_for @volunteer, :html => { :class => 'form-horizontal', :multipart => true } do |f| %>

<a href="#" onclick="toggleDiv('mydiv');" id="toggle">Link to Student Profile</a>    
<div id="mydivon" style="display:block">
  
    <%= f.input :first_name, :id => "first_name" %>
    <%= f.input :last_name %>
    <%= f.input :household_id, :collection => get_households, :prompt => 'Choose Household' %>
    &nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;
    <a href="#" onclick="toggle_visibility('household_form');">Add new household</a>
    <div id="household_form">
    <%= f.fields_for :household, Household.new do |builder| %>
      <%= render 'household_form', :f => builder %>
    <% end %>      
    </div>
    <%= f.input :is_male, :label => "Gender", :as => :radio_buttons, :collection => [["Male ",true], ["Female ",false]], :item_wrapper_class => 'inline' %> 
    <%= f.input :date_of_birth, :order => [:month, :day, :year], :start_year => Date.today.year, :end_year => Date.today.year - 90 %>
    <%= f.input :cell_phone %>
    <%= f.input :can_text %>
    <%= f.input :email %>
    <%= f.input :avatar, :label => 'Your photo please' %>
</div>
<div id="mydivoff" style="display:none">
  <div class="well" id="volunteer_student">
    <%= f.association :student, :url => autocomplete_student_first_name_volunteers_path, :as => :autocomplete_collection, :input_html => { :id => "link_to_student" } %>
</div></div>
    <%= f.input :status, :collection => Volunteer::STATUS_LIST, :prompt => 'Choose Status' %>
    <%= f.input :app_submit_date %>
    <%= f.input :app_approved %>
    <%= f.input :role, :collection => Volunteer::ROLE_LIST, :prompt => 'Choose Role' %>
    <%= f.input :name_displayed %>
    <%= f.input :spouse_id, :collection => get_volunteers, :prompt => 'Choose Spouse' %>
    <div class="form-actions">
      <%= f.button :submit, :class => 'btn-success' %>
        <% if @data.blank? %> 
          <%= link_to t('.cancel', :default => t("helpers.links.cancel")),volunteers_path, :class => 'btn' %>
        <%else%>
          <%= link_to t('.cancel', :default => t("helpers.links.cancel")),home_path, :class => 'btn' %>
        <%end%>
    </div>
<% end %>




