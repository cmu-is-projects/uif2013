<h1>Listing volunteers</h1>

<table class="table table-striped">
  <thead>
    <tr>
      <th>Name</th>
      <th>Cell phone</th>
      <th>Email</th>
      <th>App approved</th>
      <th></th>
    </tr>
  </thead>

  <tbody id="list">
    <% @volunteers.each do |volunteer| %>
      <tr>
        <td><%= link_to volunteer.name, volunteer %></td>
        <td><% if volunteer.can_text == true %>
                <%= volunteer.cell_phone %>&nbsp;<i class='icon-phone'></i>
                <%else%><%= volunteer.cell_phone %>
                <%end%></td>
        <td><%= mail_to(volunteer.email) %></td>
        <td><% if volunteer.app_approved == true %>
            <i class='icon-ok'></i>
            <%else%>
              <i class='icon-remove'></i>
          <%end%>
        </td>
        <td><%= link_to raw("<i class='icon-file'></i>"), new_note_path(:id => volunteer.id, :source => 'volunteer'), :class => 'btn btn-mini' %>
        &nbsp;<%= link_to raw("<i class='icon-pencil'></i>"),edit_volunteer_path(volunteer), :class => 'btn btn-mini' %></td>
  </tbody>

  </tr>
<% end %>
</table>

<br />

