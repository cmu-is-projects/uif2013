<p id="notice"><%= notice %></p>

<h1><%= @shift.volunteer.proper_name%></h1>

<div class="row-fluid">
  
  <div class="span8">
    <% if !@shift.volunteer.avatar_file_name.blank? %>
        <div class="img-polaroid"><%= image_tag @volunteer.avatar.url(:medium) %></div>
      <% else %>
        <% if @shift.volunteer.is_male %>
          <div class="img-polaroid"> <%= image_tag("male.jpg") %></div>&nbsp;&nbsp;
        <% else %>  
          <div class="img-polaroid"> <%= image_tag("female.jpg") %></div>&nbsp;&nbsp;
        <% end %>
    <% end %>
    
<br>
<p>
  <b>Shift date:</b>
  <%= @shift.start_time.strftime("%b %d, %Y") %>
</p>
<p>
  <b>Start time:</b>
  <%= @shift.start_time.strftime("%I:%M %P") %>
</p>

<p>
  <b>End time:</b>
  <%= @shift.end_time.strftime("%I:%M %P") %>
</p>

<p>
  <b>Checked in?:</b>
  <%= @shift.checked_in %>
</p>

<%= link_to raw("Back to shifts"), shifts_path, :class => 'btn'  %>
      &nbsp;
      <%= link_to raw("Edit this shift"), edit_shift_path(@shift), :class => 'btn' %>
      &nbsp;   
      <%= link_to raw("Remove shift"),shift_path(@shift),:method => 'delete',:data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure you want to permanently delete this shift?')) },:class => 'btn btn-danger btn-med' %></p>          
 
  </div></div>
