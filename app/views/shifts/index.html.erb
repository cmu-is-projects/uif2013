<h1>Listing shifts</h1>

<table>
  <tr>
    <th>Volunteer</th>
    <th>Start time</th>
    <th>End time</th>
    <th>Shiftable type</th>
    <th>Shiftable</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @shifts.each do |shift| %>
  <tr>
    <td><%= shift.volunteer_id %></td>
    <td><%= shift.start_time %></td>
    <td><%= shift.end_time %></td>
    <td><%= shift.shiftable_type %></td>
    <td><%= shift.shiftable_id %></td>
    <td><%= link_to 'Show', shift %></td>
    <td><%= link_to 'Edit', edit_shift_path(shift) %></td>
    <td><%= link_to 'Destroy', shift, method: :delete, data: { confirm: 'Are you sure?' } %></td>
  </tr>
<% end %>
</table>

