<h1>Listing shifts</h1>

<table class="table table-striped">
  <tr>
    <th>Volunteer</th>
    <th>Date</th>
    <th>Start time</th>
    <th>End time</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @shifts.each do |shift| %>
  <tr>
    <td><%= link_to shift.volunteer.name, volunteer_path(shift.volunteer) %></td>
    <td><%= shift.start_time.strftime("%b %d, %Y") %></td>
    <td><%= shift.start_time.strftime("%I:%M %P") %></td>
    <td><%= shift.end_time.strftime("%I:%M %P") %></td>
    <td><%= link_to 'View Shift', shift %></td>
    <td><%= link_to 'Edit', edit_shift_path(shift) %></td>
  </tr>
<% end %>
</table>

<br />

