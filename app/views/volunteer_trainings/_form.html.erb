<%= simple_form_for(@volunteer_training) do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
    <%= f.input :volunteer_id, :collection => Volunteer.alphabetical %>
    <%= f.input :training_id, :collection => Training.alphabetical %>
<%= f.input :date, :order => [:month, :day, :year], :start_year => Date.today.year-10, :end_year => Date.today.year %>
  
</div>

  <div class="form-actions">
    <%= f.button :submit %>
  </div>
<% end %>
