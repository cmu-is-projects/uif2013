<% if @events.past.count() == 0 %>
  <h2> There Are No Past Events </h2>
	<% else %>
  	<h3>Recent Events</h3>
  	<table>
  		<% @events.past.each do |event| %>
  		<tr>
  			<td width="330">
    			<%=link_to event.program.name, event_path(event) %>&nbsp;&nbsp;&nbsp;&nbsp; 
    		</td>
    		<td width="200">
    			<%= event.date.strftime("%B %d, %Y") %>&nbsp;&nbsp;&nbsp;&nbsp;
    		</td>
    		<td>
    			<%=link_to image_tag("barcode.jpg", :width => 60, :height => 60), {:controller => "home", :action => "checkin", :event_id => event.id}%><br>
    		</td>
 	 	<% end %> 
 		</tr>

 	</table>
<% end %>